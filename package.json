  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "prettier": "^3.0.3",
    "simple-git": "^3.20.0",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
